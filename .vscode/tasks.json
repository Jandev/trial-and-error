{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Aspire",
      "type": "shell",
      "command": "aspire",
      "args": [
        "run"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "Azure Login - Personal",
      "type": "shell",
      "command": "az",
      "args": [
        "login",
        "--tenant",
        "${env:PERSONAL_AZURE_TENANT_ID}"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "Setup Python Environment - Backend (uv)",
      "type": "shell",
      "command": "uv venv && source .venv/bin/activate && uv pip install -r src/AspireTrial/AspireBackendService/requirements.txt",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Activate Python Environment - Backend",
      "type": "shell",
      "command": "source .venv/bin/activate && exec $SHELL",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": "none"
    }
  ]
}